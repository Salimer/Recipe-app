<div class="form ff">
  <h2>Add new Ingredient</h2>
  <%= form_with(model: [@recipe, @recipe_food], url: recipe_recipe_foods_path(@recipe), local: true) do |form| %>
    <div class="input">
      <%= form.label :quantity %>
      <%= form.text_field :quantity, placeholder: 'Enter quantity', required: true, class: 'form-input' %>
    </div>
    <div class="input">
      <%= form.label :food %>
      <%= form.text_field :food, placeholder: 'Enter food...', required: true, class: 'form-text-area' %>
    </div>

    <%= form.submit "Create Ingredient", class: "submit" %>
  <% end %>
</div>
